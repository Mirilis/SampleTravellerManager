<Window x:Class="SampleTravellerManager.Views.QuestionsManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleTravellerManager.Views"
        xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
        mc:Ignorable="d"
        Title="QuestionsManager" Height="900" Width="1600"
        DataContext="{Binding Questions, Source={StaticResource Locator}}">
    <Grid>
        <ListBox ItemsSource="{Binding Path=QuestionsList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                           FontWeight="Bold" Foreground="Navy"/>
                        <TextBlock Text="{Binding Request}"
                           FontWeight="Bold" Foreground="Navy"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
