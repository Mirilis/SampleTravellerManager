<UserControl x:Class="SampleTravellerManager.Controls.TravellersListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleTravellerManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView ItemsSource="{Binding AllTravellers}" SelectedItem="{Binding SelectedTraveller, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Product}" Header="Product" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="200 " />
                    <GridViewColumn DisplayMemberBinding="{Binding Description}" Header="Description" Width="300 " />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
