<Window x:Class="SampleTravelerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleTravelerManager;assembly=SampletravelerManager"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Black">
        <Button x:Name="button" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="100" Height="100" FocusVisualStyle="{DynamicResource Buttons}" Style="{DynamicResource Buttons}" Foreground="White">
            <Button.Content>
                <TextBlock TextAlignment="Center">
                    <Run>MANAGE</Run>
                    <LineBreak></LineBreak>
                    <Run>SAMPLES</Run>
                </TextBlock>
            </Button.Content>
        </Button>
    </Grid>
</Window>